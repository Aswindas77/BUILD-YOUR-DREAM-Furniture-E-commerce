<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Order Management</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/public/adminAssets/css/orderManage.css">

</head>


<body>
    <div class="container mt-4">
        <h2 class="mb-4"><i class="fas fa-shopping-bag"></i> Order Management</h2>

        <!-- Search & Filter Section
        <div class="d-flex justify-content-between mb-3">
            <input type="text" id="searchOrder" class="form-control w-25" placeholder="Search Order ID">
            <select id="filterStatus" class="form-select w-25">
                <option value="">Filter by Status</option>
                <option value="Pending">Pending</option>
                <option value="Shipped">Shipped</option>
                <option value="Delivered">Delivered</option>
                <option value="Canceled">Canceled</option>
            </select>
        </div> -->

        <!-- Orders Table -->
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Order ID</th>
                    <th>Customer</th>
                    <th>Date</th>
                    <th>Total</th>
                    <th>Order Status</th>
                    <th>payment Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="orderTableBody">
                <% userOrders.forEach(order=> { %>
                    <tr>
                        <td>
                            <%= order._id %>
                        </td>
                        <td>
                            <%= order.userId ? order.userId.name : 'Guest' %><br>
                                <small>
                                    <%= order.userId ? order.userId.email : '' %>
                                </small>
                        </td>
                        <td>
                            <%= new Date(order.createdAt).toLocaleDateString() %>
                        </td>
                        <td>â‚¹<%= order.totalAmount.toFixed(2) %>
                        </td>
                        <!-- <td>
                            <span class="badge bg-<%= order.status === 'Paid' ? 'success' : 'warning' %>">
                                <%= order.status %>
                            </span>
                        </td> -->
                        <td>
                            <select class="form-select form-select-sm status-select" data-order-id=<%=order._id %>
                                style="width: 150px; background-color:<%= order.status==='Pending' ? '#ffd700' :
                                    order.status==='Shipped' ? '#87ceeb' : order.status==='Delivered' ? '#90ee90' :
                                    order.status==='Cancelled' ? '#ff6b6b' : order.status==='Returned' ? '#ff9966'
                                    : '#gray' %>">
                                    <option value="Pending" <%=order.status==='Pending' ? 'selected' : '' %>>Pending
                                    </option>
                                    <option value="Shipped" <%=order.status==='Shipped' ? 'selected' : '' %>>Shipped
                                    </option>
                                    <option value="Delivered" <%=order.status==='Delivered' ? 'selected' : '' %>
                                        >Delivered </option>
                                    <option value="Cancelled" <%=order.status==='Cancelled' ? 'selected' : '' %>
                                        >Cancelled</option>
                                    <option value="Returned" <%=order.status==='Returned' ? 'selected' : '' %>>Returned
                                    </option>
                            </select>
                        </td>
                        <td>
                            <% if (order.status==='Delivered' ||order.paymentStatus==='Paid' ) { %>
                                <span class="text-success">Completed</span>
                                <% } else if (order.paymentStatus==='Refunded' ) { %>
                                    <span class="text-info">Refunded</span>
                                    <% } else if (order.status==='Cancelled' ) { %>
                                        <span class="text-danger">Failed</span>
                                        <% } else { %>
                                            <span class="text-warning">Pending</span>
                                            <% } %>
                        </td>
                        <td>
                            <a href="/admin/orderView/<%= order._id %>" class="btn btn-primary btn-sm">View</a>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>

        <!-- Pagination Controls -->
        <nav>
            <ul class="pagination">
                <% if (currentPage> 1) { %>
                    <li class="page-item">
                        <a class="page-link" href="?page=<%= currentPage - 1 %>">Previous</a>
                    </li>
                    <% } %>

                        <% for (let i=1; i <=totalPages; i++) { %>
                            <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                <a class="page-link" href="?page=<%= i %>">
                                    <%= i %>
                                </a>
                            </li>
                            <% } %>

                                <% if (currentPage < totalPages) { %>
                                    <li class="page-item">
                                        <a class="page-link" href="?page=<%= currentPage + 1 %>">Next</a>
                                    </li>
                                    <% } %>
            </ul>
        </nav>
    </div>

    <!-- Order Details Modal -->
    <div class="modal fade" id="orderModal" tabindex="-1" aria-labelledby="orderModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="orderModalLabel">Order Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body" id="orderDetails">
                    <!-- Order details will be dynamically loaded here -->
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const colors = {
                'Pending': '#ffd700',
                'Shipped': '#87ceeb',
                'Delivered': '#90ee90',
                'Cancelled': '#ff6b6b'
            };

            document.querySelectorAll('.status-select').forEach(select => {
                select.dataset.previousValue = select.value;

                select.addEventListener('change', async function () {
                    const orderId = this.dataset.orderId;
                    const newStatus = this.value;
                    const previousValue = this.dataset.previousValue;

                    this.disabled = true;
                    this.style.backgroundColor = colors[newStatus];

                    try {
                        const response = await fetch('/admin/update-order-status', {
                            method: 'POST',
                            headers: { "Content-Type": "application/json" },
                            body: JSON.stringify({ orderId, status: newStatus })
                        });

                        const data = await response.json();

                        if (data.success) {
                            this.dataset.previousValue = newStatus;

                            const statusElement = document.querySelector(`.order-status-${orderId}`);
                            if (statusElement) {
                                statusElement.textContent = newStatus;
                            }

                            Swal.fire({
                                icon: 'success',
                                title: 'Status Updated',
                                text: `Order status changed to ${newStatus}`,
                                toast: true,
                                position: 'top-end',
                                showConfirmButton: false,
                                timer: 1000
                            }).then(() => window.location.reload());

                        } else {
                            throw new Error(data.message || 'Failed to update status');
                        }
                    } catch (error) {
                        console.error("Error updating status:", error);

                        this.style.backgroundColor = colors[previousValue];
                        this.value = previousValue;

                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: error.message
                        });
                    } finally {
                        this.disabled = false;
                    }
                });
            });
        });

    </script>



</body>

</html>