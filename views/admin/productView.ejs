<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        :root {
            --primary-color: #4a90e2;
            --secondary-color: #f8f9fa;
        }

        body {
            background-color: #f4f6f8;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .product-card {
            border: none;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            border-radius: 20px;
            overflow: hidden;
            margin: 2rem auto;
            max-width: 800px;
            background: white;
        }

        .card-header {
            background: linear-gradient(135deg, var(--primary-color), #2c5282);
            color: white;
            padding: 1.5rem;
            text-align: center;
            font-size: 1.5rem;
        }

        .product-image-container {
            position: relative;
            overflow: hidden;
            border-radius: 15px;
            margin: 1rem;
        }

        .product-image {
            width: 100%;
            height: 400px;
            object-fit: contain;
            transition: transform 0.3s ease;
        }

        .product-image:hover {
            transform: scale(1.05);
        }

        .product-details {
            padding: 2rem;
            background: var(--secondary-color);
            border-radius: 15px;
            margin: 1rem;
        }

        .product-details p {
            margin-bottom: 1rem;
            font-size: 1.1rem;
            border-bottom: 1px solid #eee;
            padding-bottom: 0.5rem;
        }

        .product-details strong {
            color: var(--primary-color);
            min-width: 120px;
            display: inline-block;
        }

        .image-nav {
            display: flex;
            gap: 1rem;
            margin-top: 1rem;
            overflow-x: auto;
            padding: 1rem;
        }

        .image-nav img {
            width: 80px;
            height: 80px;
            object-fit: cover;
            border-radius: 10px;
            cursor: pointer;
            transition: all 0.3s ease;
            border: 2px solid transparent;
        }

        .image-nav img:hover {
            border-color: var(--primary-color);
            transform: translateY(-2px);
        }

        .btn-back {
            background: linear-gradient(135deg, var(--primary-color), #2c5282);
            color: white;
            border: none;
            padding: 0.75rem 2rem;
            border-radius: 10px;
            transition: all 0.3s ease;
        }

        .btn-back:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 6px rgba(50, 50, 93, 0.11);
            color: white;
        }
    </style>
</head>

<body>
    <div class="container mt-5">
        <div class="product-card">
            <div class="card-header">
                <h2>
                    <%= product.name || 'Product Name Not Available' %>
                </h2>
            </div>
            <div class="card-body">
                <div class="row">
                    <!-- Main Image Section -->
                    <div class="col-md-6 text-center">
                        <div class="product-image-container">
                            <% if (product.images && product.images.length> 0) { %>
                                <img id="mainImage" class="product-image" src="<%= product.images[0] %>"
                                    alt="<%= product.name || 'Product Image' %>">
                                <% } else { %>
                                    <img id="mainImage" class="product-image" src="/path/to/default-placeholder.jpg"
                                        alt="Default Image">
                                    <% } %>
                        </div>
                        <div class="image-nav">
                            <% if (product.images && product.images.length> 0) { %>
                                <% product.images.forEach((image, index)=> { %>
                                    <img class="thumbnail" src="<%= image %>" alt="Thumbnail <%= index + 1 %>">
                                    <% }); %>
                                        <% } else { %>
                                            <p>No thumbnails available</p>
                                            <% } %>
                        </div>
                    </div>

                    <!-- Product Details Section -->
                    <div class="col-md-6">
                        <div class="product-details">
                            <p>
                                <strong>Description:</strong>
                                <span>
                                    <%= product.description || 'No description available' %>
                                </span>
                            </p>
                            <p>
                                <strong>Category:</strong>
                                <span>
                                    <%= categoryname || 'No category' %>
                                </span>
                            </p>
                            <p>
                                <strong>Sales Price:</strong>
                                <span class="text-success">â‚¹<%= product.salesPrice ? product.salesPrice.toFixed(2)
                                        : '0.00' %></span>
                            </p>
                            <p>
                                <strong>Product Offer:</strong>
                                <span class="text-dark">
                                    <%= product.productOffer || 0 %>% OFF
                                </span>
                            </p>
                            <p>
                                <strong>Stock:</strong>
                                <span>
                                    <%= product.stock || 'Out of stock' %>
                                </span>
                            </p>
                            <p>
                                <strong>Status:</strong>
                                <span class="<%= product.status === 'Active' ?  'text-danger':'text-success' %>">
                                    <%= product.status || 'Inactive' %>
                                </span>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer text-center py-4">
                <a href="/admin/productManagement" class="btn btn-back">
                    <i class="fas fa-arrow-left me-2"></i>Back to Product List
                </a>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const mainImage = document.getElementById("mainImage");
            const thumbnails = document.querySelectorAll(".thumbnail");

            thumbnails.forEach((thumbnail) => {
                thumbnail.addEventListener("click", () => {
                    mainImage.src = thumbnail.src;
                });
            });
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>