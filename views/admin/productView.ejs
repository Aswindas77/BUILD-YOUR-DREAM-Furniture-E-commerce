<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/public/adminAssets/css/productView.css">
</head>

<body>
    <div class="container mt-5">
        <div class="product-card">
            <div class="card-header">
                <h2>
                    <%= product.name || 'Product Name Not Available' %>
                </h2>
            </div>
            <div class="card-body">
                <div class="row">
                   
                    <div class="col-md-6 text-center">
                        <div class="product-image-container">
                            <% if (product.images && product.images.length> 0) { %>
                                <img id="mainImage" class="product-image" src="<%= product.images[0] %>"
                                    alt="<%= product.name || 'Product Image' %>">
                                <% } else { %>
                                    <img id="mainImage" class="product-image" src="/path/to/default-placeholder.jpg"
                                        alt="Default Image">
                                    <% } %>
                        </div>
                        <div class="image-nav">
                            <% if (product.images && product.images.length> 0) { %>
                                <% product.images.forEach((image, index)=> { %>
                                    <img class="thumbnail" src="<%= image %>" alt="Thumbnail <%= index + 1 %>">
                                    <% }); %>
                                        <% } else { %>
                                            <p>No thumbnails available</p>
                                            <% } %>
                        </div>
                    </div>

                    
                    <div class="col-md-6">
                        <div class="product-details">
                            <p>
                                <strong>Description:</strong>
                                <span>
                                    <%= product.description || 'No description available' %>
                                </span>
                            </p>
                            <p>
                                <strong>Category:</strong>
                                <span>
                                    <%= categoryname || 'No category' %>
                                </span>
                            </p>
                            <p>
                                <strong>Sales Price:</strong>
                                <span class="text-success">â‚¹<%= product.salesPrice ? product.salesPrice.toFixed(2)
                                        : '0.00' %></span>
                            </p>
                            <p>
                                <strong>Product Offer:</strong>
                                <span class="text-dark">
                                    <%= product.productOffer || 0 %>% OFF
                                </span>
                            </p>
                            <p>
                                <strong>Stock:</strong>
                                <span>
                                    <%= product.stock || 'Out of stock' %>
                                </span>
                            </p>
                            <p>
                                <strong>Status:</strong>
                                <span class="<%= product.status === 'Active' ?  'text-danger':'text-success' %>">
                                    <%= product.status || 'Inactive' %>
                                </span>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer text-center py-4">
                <a href="/admin/productManagement" class="btn btn-back">
                    <i class="fas fa-arrow-left me-2"></i>Back to Product List
                </a>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const mainImage = document.getElementById("mainImage");
            const thumbnails = document.querySelectorAll(".thumbnail");

            thumbnails.forEach((thumbnail) => {
                thumbnail.addEventListener("click", () => {
                    mainImage.src = thumbnail.src;
                });
            });
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>